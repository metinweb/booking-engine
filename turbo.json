{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".output/**"
            ]
        },
        "test": {
            "cache": true,
            "outputs": [
                "coverage/**"
            ]
        },
        "test:coverage": {
            "cache": false,
            "outputs": [
                "coverage/**"
            ]
        },
        "lint": {
            "cache": true
        },
        "lint:fix": {
            "cache": false
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}